<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".TemperatureAcitivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <!--타이틀        -->
    <LinearLayout
        android:background="@drawable/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="#CD9C53">

      <Button
          android:id="@+id/button2"
          android:layout_width="52dp"
          android:layout_height="62dp"
          android:background="#00FFFFFF"
          android:text="X"
          android:textSize="30sp"
          android:textColor="#FFFFFF"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="            온습도 측정"
          android:textColor="#FFFFFF"
          android:textSize="30dp"></TextView>

    </LinearLayout>


    <LinearLayout
        android:background="#EBE5E4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <LinearLayout
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center">

        <ImageView
            android:id="@+id/thermometer"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:src="@drawable/thermometer1" />

        <TextView
            android:id="@+id/tempText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#ff0000"/>
      </LinearLayout>
      <LinearLayout
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/humiditymeter"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/humiditymeter1" />
        <TextView
            android:id="@+id/humText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#0000ff"
            />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#EBE5E4"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/textV"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:text=""
          android:textColor="#FF0000"
          android:textSize="30dp"></TextView>
      <TextView
          android:id="@+id/texta"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:textSize = "30dp"
          android:text=""
          android:textColor = "#000000">
      </TextView>
    </LinearLayout>
      <LinearLayout
          android:id="@+id/btnSend"
          android:background="@drawable/all_border"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:gravity="center"
          android:backgroundTint="#FFEBE5E4">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="온습도 수치 보기"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D2954F"
            android:src="@drawable/magnifier" />
      </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>